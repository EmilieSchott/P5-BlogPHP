{% extends "base.html.twig" %}

<!-- header informations -->
{% block stylesheet %}
    <link href="public/theme/css/style.css" rel="stylesheet">
{% endblock %}
{% block title %}Blog{% endblock %}
{% block description %}Accédez aux différents billets du blog Web-Link.{% endblock %}
{% block image %}  <img src="public/theme/img/X.jpg" alt="description de X"/> <!-- A compléter --> {% endblock %}  
{% block type %}website{% endblock %}
{% block url %} http://www.example.com/ <!-- A compléter -->{% endblock %} 
{% block author %}Emilie Schott{% endblock %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block header %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <!-- Display posts list-->
    {% for post in posts %}
        <section class="page-section">
            <div class="container">
                <div class="post-item">
                    <div class="post-item-title d-flex col-10 col-lg-auto p-0 {% if loop.index is odd %} ml-3 mr-lg-auto {% else %} justify-content-end mr-3 ml-auto {% endif %}">
                        <div class="bg-faded d-flex p-3 p-md-4 p-xl-5 rounded">
                            <h2 class="section-heading mb-0">
                            <span class="section-heading-upper"> Publié le {{ post.createdAt }} </span> 
                            <span class="section-heading-lower">{{ post.title }} </span> 
                            </h2>
                        </div>
                    </div>
                    <img class="post-item-img mx-auto d-flex rounded img-fluid mb-3 mb-lg-0" src="public/theme/img/{{ post.picture }}" alt="{{ post.pictureDescription }}"/> <!-- post-item-img mx-auto d-flex rounded img-fluid mb-3 mb-lg-0 -->
                   <div class="post-item-description d-flex {% if loop.index is odd %} justify-content-end mr-3 ml-auto {% else %} ml-3 mr-auto {% endif %}">
                        <div class="bg-faded col-10 col-lg-12 p-3 p-md-4 p-xl-5 pb-4 pb-lg-5 rounded ">
                            <p class="mb-0">{{ post.standFirst }}</p> 
                            <div class="blog-button d-flex "> 
                                <a class="btn btn-primary btn-xl mx-auto mr-lg-0" href="index.php?action=post&amp;page={{ post.id }}">Lire la suite...</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section> 
    {% endfor %}

    <!-- Pages navigation.-->
    <section class="page-section page-nbr-section py-3 clearfix"> 
        <div class="container text-center">           
            <div class="text-center d-inline-flex">
                <!-- left arrow : -->
                {% if page > 1 %} <a href="index.php?action=blog&amp;page={{ page-1 }}"> {% else  %} {% endif  %}
                    <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50">
                        <g>
                            <path class="{% if page > 1 %} contour {% else  %} disable-contour {% endif  %}" d="M48.1 44.75c0 1.9-1.6 3.4-3.399 3.4H5.3c-1.9 0-3.4-1.6-3.4-3.4V5.25c0-1.9 1.6-3.4 3.399-3.4h39.4c1.899 0 3.399 1.601 3.399 3.4v39.5z" 
                            stroke-width="2.772" stroke-linecap="round" stroke-linejoin="round" stroke-miterlimit="10"/>
                            <path class="{% if page > 1 %} intern {% else  %} disable-intern {% endif  %}" d="M23.996 23.129l8.978-8.975a2.643 2.643 0 113.739 3.739L29.607 25l7.105 7.105a2.644 2.644 0 11-3.739 3.74l-8.978-8.976a2.647 2.647 0 01.001-3.74z"/>
                            <path class="{% if page > 1 %} intern {% else  %} disable-intern {% endif  %}" d="M13.286 23.129l8.975-8.975a2.645 2.645 0 013.741 3.739L18.897 25l7.104 7.105a2.644 2.644 0 11-3.741 3.74l-8.975-8.976a2.647 2.647 0 01.001-3.74z"/>
                        </g>
                    </svg>
                    {% if page > 1 %} </a> {% else  %} {% endif  %}

                <!-- Display number of pages --> 
                <div class="page-number mx-3 mt-2 mt-lg-1">{{ page }} / {{ pages }}</div>

                <!-- right arrow : -->
                {% if page < pages %} <a href="index.php?action=blog&amp;page={{ page+1 }}"> {% else  %} {% endif  %}
                    <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50">
                        <g>
                            <path class="{% if page < pages %} contour {% else  %} disable-contour {% endif  %}"  d="M48.1 44.75c0 1.9-1.6 3.4-3.399 3.4H5.3c-1.9 0-3.4-1.6-3.4-3.4V5.25c0-1.9 1.6-3.4 3.399-3.4h39.4c1.899 0 3.399 1.601 3.399 3.4v39.5z" 
                            stroke-width="2.772" stroke-linecap="round" stroke-linejoin="round" stroke-miterlimit="10"/>
                            <path class="{% if page < pages %} intern {% else  %} disable-intern {% endif  %}" d="M26.004 23.129l-8.978-8.975a2.643 2.643 0 10-3.739 3.739L20.393 25l-7.105 7.105a2.644 2.644 0 103.739 3.74l8.978-8.976a2.647 2.647 0 00-.001-3.74z"/>
                            <path class="{% if page < pages %} intern {% else  %} disable-intern {% endif  %}" d="M36.714 23.129l-8.975-8.975a2.645 2.645 0 00-3.741 3.739L31.103 25l-7.104 7.105a2.644 2.644 0 103.741 3.74l8.975-8.976a2.647 2.647 0 00-.001-3.74z"/>
                        </g>
                    </svg>
                {% if page < pages %} </a> {% else  %} {% endif  %}
            </div>
        </div>
    </section>
    
{% endblock %}

{% block footer %}
    {{ parent() }}
{% endblock %}
