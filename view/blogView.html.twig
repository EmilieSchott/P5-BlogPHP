{% extends "base.html.twig" %}

{% block stylesheet %}
    <link href="public/theme/css/style.css" rel="stylesheet">
{% endblock %}
{% block title %}Blog{% endblock %}
{% block description %}Accédez aux différents billets du blog Web-Link.{% endblock %}
{% block image %}<!-- <img src="public/theme/img/X.jpg" alt="description de X"/> -->{% endblock %}
{% block type %}website{% endblock %}
{% block url %}<!-- http://www.example.com/-->{% endblock %}
{% block author %}Emilie Schott{% endblock %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block header %}
    {{ parent() }}
{% endblock %}

{% block content %}
    {% for post in posts %}
        <section class="page-section">
            <div class="container">
                <div class="post-item">
                    <div class="post-item-title d-flex">
                        <div class="bg-faded p-5 d-flex  {% if loop.index is odd %} mr-auto {% else %} ml-auto {% endif %} rounded">
                            <h2 class="section-heading mb-0">
                            <span class="section-heading-upper"> Publié le {{ post.createdAt }} </span> 
                            <span class="section-heading-lower">{{ post.title }} </span> 
                            </h2>
                        </div>
                    </div>
                    <img class="post-item-img  mx-auto d-flex rounded img-fluid mb-3 mb-lg-0" src="public/theme/img/{{ post.picture }}" alt=""/> 
                    <div class="post-item-description d-flex {% if loop.index is odd %} ml-auto {% else %} mr-auto {% endif %}">
                        <div class="bg-faded p-5 rounded">
                            <p class="mb-0">{{ post.standFirst }}</p> 
                        </div>
                    </div>
                </div>
            </div>
        </section> 
